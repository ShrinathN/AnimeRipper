{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Anime Ripper",
  "description": "Rips anime download links off chia-anime.tv",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Anime Ripper"
  },

  "background": {
    "scripts": ["background_agent.js"],
    "persistent": false
  },

  "content_scripts": [{
      "matches": ["http://ww2.chia-anime.tv/*subbed/"],
      "run_at": "document_idle",
      "js": ["episode_page.js"]
    },
    {
      "matches": ["http://download.animepremium.tv/*"],
      "run_at": "document_end",
      "js": ["download_page.js"]
    }
  ],

  "permissions": [
    "tabs",
    "storage",
    "http://ww2.chia-anime.tv/episode/*",
    "http://ww2.chia-anime.tv/*",
    "http://download.animepremium.tv/*"
  ]
}
