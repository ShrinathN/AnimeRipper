{
  "manifest_version": 2,
  "version": "1.2.2",
  "name": "Anime Ripper",
  "description": "Rips anime download links off chia-anime.tv",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Anime Ripper",
    "default_icon": {
        "16": "images/logo16.png",
        "32": "images/logo32.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
      }
  },

  "icons": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    },

  "background": {
    "scripts": ["scripts/background_agent.js"],
    "persistent": false
  },

  "content_scripts": [{
      "matches": ["http://ww2.chia-anime.tv/*subbed/"],
      "run_at": "document_idle",
      "js": ["scripts/episode_page.js"]
    },
    {
      "matches": ["http://download.animepremium.tv/*"],
      "run_at": "document_end",
      "js": ["scripts/download_page.js"]
    }
  ],

  "permissions": [
    "tabs",
    "storage",
    "http://ww2.chia-anime.tv/episode/*",
    "http://ww2.chia-anime.tv/*",
    "http://download.animepremium.tv/*"
  ]
}
